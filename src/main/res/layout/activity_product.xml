<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/product_content"
		android:background="@android:color/black"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:flexWrap="wrap"
		app:alignItems="stretch"
		app:alignContent="stretch"
	    tools:context=".ProductActivity">

	<RelativeLayout
		android:id="@+id/viewTop"
		android:layout_width="10dp"
		android:layout_height="10dp"
		android:background="@android:color/white"
	>
		<Button
			android:id="@+id/close_button"
			android:text="@string/close_btn"
			android:textColor="@color/black_overlay"
			android:layout_width="wrap_content"
			android:background="@android:color/transparent"
			app:autoSizeTextType="uniform"
			app:autoSizeMinTextSize="12sp"
			app:autoSizeMaxTextSize="100sp"
			app:autoSizeStepGranularity="2sp"
			android:layout_marginTop="25dp"
			android:layout_height="25dp"/>

		<android.support.v7.widget.RecyclerView
			android:id="@+id/product_images"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
		/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/viewBottom"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorWhite"
	>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:background="@android:color/black"
		android:layout_marginBottom="50dp"
	>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:orientation="horizontal">

			<TextView
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:id="@+id/product_title"
				android:textColor="@color/colorWhite"
				app:autoSizeTextType="uniform"
				app:autoSizeMinTextSize="12sp"
				app:autoSizeMaxTextSize="100sp"
				app:autoSizeStepGranularity="2sp"
				android:textStyle="bold"
				android:gravity="center"
				android:layout_marginEnd="10dp"
				android:layout_weight="1"/>

			<TextView
				android:layout_width="80dp"
				android:layout_height="match_parent"
				android:id="@+id/product_price"
				android:textColor="@color/blue_text"
				app:autoSizeTextType="uniform"
				app:autoSizeMinTextSize="12sp"
				app:autoSizeMaxTextSize="100sp"
				android:textStyle="bold"
				app:autoSizeStepGranularity="2sp"
				android:gravity="center" />
		</LinearLayout>

		<ScrollView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:paddingBottom="10dp"
			android:paddingTop="5dp"
			android:layout_weight="1">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="@color/grey_text"
				android:id="@+id/product_description"/>
		</ScrollView>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:orientation="horizontal"
			android:id="@+id/variant_chooser"
			android:background="@color/variant_background"
			>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="30dp"
					android:layout_gravity="center"
					android:textColor="@color/grey_text"
					android:layout_weight="1"
					app:autoSizeTextType="uniform"
					app:autoSizeMinTextSize="12sp"
					app:autoSizeMaxTextSize="100sp"
					app:autoSizeStepGranularity="2sp"
					android:id="@+id/variant_title"
					android:text=""/>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:layout_gravity="center"
					android:textColor="@color/grey_text"
					android:layout_weight="0.1"
					app:autoSizeTextType="uniform"
					app:autoSizeMinTextSize="12sp"
					app:autoSizeMaxTextSize="100sp"
					app:autoSizeStepGranularity="2sp"
					android:id="@+id/variant_chevron"
					android:text="@string/larger_than"/>

		</LinearLayout>
	</LinearLayout>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_marginBottom="5dp"
		android:layout_alignParentBottom="true"
		android:layout_height="40dp">
		<Button
			android:id="@+id/checkout_button"
			android:text="@string/checkout_button_title"
			android:textColor="@color/colorWhite"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:background="@drawable/button_blue"
			android:layout_height="match_parent"/>
		<include layout="@layout/googlepay_button"
	         android:id="@+id/button_google_pay"
	         android:visibility="gone"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="match_parent"/>
	</LinearLayout>
	</RelativeLayout>

</com.google.android.flexbox.FlexboxLayout>