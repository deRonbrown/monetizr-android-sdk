<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.monetizr.monetizrsdk"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application>
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1" />
        <meta-data
            android:name="android.notch_support"
            android:value="true" />

        <service
            android:name="io.monetizr.monetizrsdk.ClearedService"
            android:stopWithTask="false" />

        <provider
            android:name="io.monetizr.monetizrsdk.AppContextProvider"
            android:authorities="${applicationId}.monetizrsdk.applicationprovider"
            android:directBootAware="true"
            android:exported="false"
            android:initOrder="900"
            tools:targetApi="n" />
        <provider
            android:name="io.monetizr.monetizrsdk.LastActivityProvider"
            android:authorities="${applicationId}.monetizrsdk.lastactivityprovider"
            android:directBootAware="true"
            android:exported="false"
            android:initOrder="900"
            tools:targetApi="n" />

        <activity
            android:name="io.monetizr.monetizrsdk.ProductActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_product"
            android:theme="@style/FullscreenTheme"
            android:windowSoftInputMode="adjustResize" >
        </activity>
    </application>

</manifest>